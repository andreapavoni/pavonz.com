<section class="content">
    <header><h3><%= link "← All posts", to: Routes.blog_path(@conn, :index)%></h3></header>
	  <article id="<%= @post.id %>">
      <header>
        <time><small><%= @post.date %></small></time> ~ <%= tags(@conn, @post.tags, ", ") %>
        <h2><%= link @post.title, to: Routes.blog_path(@conn, :show, @post)%></h2>
      </header>

      <%= raw @post.body %>



      <footer><h5></h5></footer>
	  </article>
</section>
