<section>
  <%= for post <- @posts do %>
	  <article id="<%= post.id %>" style="margin-bottom: 3rem;">
      <header>
        <small><time><%= post.date %></time></small> ~ <%= Enum.join(post.tags, ", ") %>
        <h2><%= link post.title, to: Routes.blog_path(@conn, :show, post)%></h2>
      </header>

      <p><%= raw post.description %></p>

      <footer>

      </footer>
	  </article>
  <% end %>
</section>
